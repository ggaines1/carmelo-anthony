<!doctype html>
<html>

<head>
  <title>Carmelo Anthony Fan Site</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
  <link rel="stylesheet" href="profile.css">
</head>

<body>
  <div class="container">

    <div class="page-header text-center">
      <h1> Carmelo Anthony Fan Site</h1>
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

      LOCAL INFORMATION
      <div class="col-sm-6">
        <div class="well">
          <!-- <h3><i class="fas fa-basketball-ball"></i> STAYME70 <i class="fas fa-basketball-ball"></i></h3> -->

          <!-- <% if (user.local.email) { %> -->
          <div class="video">
            <p>
              <iframe width="500" height="315" src="https://www.youtube.com/embed/IW5SH4TTf-8" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </p>
          </div>
          <!-- <p>
            <iframe width="560" height="315" src="https://www.youtube.com/embed/IW5SH4TTf-8" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          </p> -->

          <!-- <a href="/unlink/local" class="btn btn-default">Unlink</a>
          <% } else { %>
          <a href="/connect/local" class="btn btn-default">Connect Local</a>
          <% } %> -->
        </div>
      </div>
      <div class="col-sm-6">
        <h3>Messages</h3>
        <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
          <li class="message">
            <span><%= messages[i].name %></span>
            <span><%= messages[i].msg %></span>
            <span><%= messages[i].thumbUp %></span>
            <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
            <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
            <span><i class="fa fa-trash" aria-hidden="true"></i></span>
          </li>
          <% } %>
        </ul>

        <h2>Add a message</h2>
        <% if (user.local.email) { %>
        <form action="/messages" method="POST">
          <input type="text" value="<%= user.local.email %>" name="name">
          <input type="text" placeholder="message" name="msg">
          <button type="submit">Submit</button>
        </form>
      </div>
      <% } %>

    </div>
    <div class="melo2">
      <img src="img/melo2.png" alt="">
          </div>
      <div class="melo4">
        <img src="img/melo4.png" alt="">
          </div>
        <script src="main.js"></script>

</body>

</html>